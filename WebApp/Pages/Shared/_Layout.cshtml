@inject AppSettings AppSettings
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Inspector Gadget</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="@(string.IsNullOrWhiteSpace(AppSettings.BackgroundColor) ? "" : "background-color: " + AppSettings.BackgroundColor + ";")">
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Inspector Gadget</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!AppSettings.DisableDnsLookup)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/DnsLookup" title="DNS Lookup">DNS</a></li>
                        }
                        @if (!AppSettings.DisableHttpRequest)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/HttpRequest" title="HTTP Request">HTTP</a></li>
                        }
                        @if (!AppSettings.DisableSqlConnection)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/SqlConnection" title="SQL Connection">SQL</a></li>
                        }
                        @if (!AppSettings.DisableAzureManagedIdentity)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/AzureManagedIdentity" title="Azure Managed Identity">Azure Managed Identity</a></li>
                        }
                        @if (!AppSettings.DisableSocketConnection)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/SocketConnection" title="Socket Connection">Socket</a></li>
                        }
                        @if (!AppSettings.DisableProcessRun)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/ProcessRun" title="Process Run">Process</a></li>
                        }
                        @if (!AppSettings.DisableSpiffe)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Spiffe" title="SPIFFE">SPIFFE</a></li>
                        }
                        @if (!AppSettings.DisableHealthCheck)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/HealthCheck" title="Health Check">Health</a></li>
                        }
                        @if (!AppSettings.DisableIntrospector)
                        {
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Introspector" title="Introspector">Introspector</a></li>
                        }
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Api" title="API">API</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (!string.IsNullOrWhiteSpace(AppSettings.InfoMessage))
            {
                <div class="alert alert-primary">@(AppSettings.InfoMessage)</div>
            }
            @if (!string.IsNullOrWhiteSpace(AppSettings.ErrorMessage))
            {
                <div class="alert alert-danger">@(AppSettings.ErrorMessage)</div>
            }
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTimeOffset.UtcNow.Year | <a href="https://github.com/jelledruyts/InspectorGadget">Project Homepage</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
